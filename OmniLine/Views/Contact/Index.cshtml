@{
}
@model IEnumerable<Contact>


<div>
    <div style="margin-bottom:2px;" class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-action="Create" asp-controller="Contact" class="btn btn-primary me-md-2" type="button">Добавить</a>
    </div>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ФИО</th>
                <th scope="col">Email</th>
                <th scope="col">Дата создная</th>
                <th scope="col">Дата изменение</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.FIO</td>
                    <td>@item.Email</td>
                    <td>@item.DateCreate</td>
                    <td>@item.DateEdit</td>
                    <td align="center">
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-primary">Удалить</a>
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-primary">Изменить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>