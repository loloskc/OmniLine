
@model IEnumerable<CounterAgent>

<div>
    <div style="margin-bottom:2px;" class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-action="Create" asp-controller="CounterAgent" class="btn btn-primary me-md-2" type="button">Добавить</a>
    </div>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название контрагента</th>
                <th scope="col">Дата создания</th>
                <th scope="col">Дата изменения</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row" onclick="openDetail(@item.CounterAgentId)" >@item.CounterAgentId</th>
                    <td onclick="openDetail(@item.CounterAgentId)" >@item.Name</td>
                    <td onclick="openDetail(@item.CounterAgentId)" >@item.DateCreate</td>
                    <td onclick="openDetail(@item.CounterAgentId)" >@item.DateEdit</td>
                    <td align="center">
                        <a asp-controller="CounterAgent" asp-action="Delete" asp-route-id="@item.CounterAgentId" type="button" class="btn btn-primary">Удалить</a>
                        <a asp-controller="CounterAgent" asp-action="Edit" asp-route-id="@item.CounterAgentId" type="button" class="btn btn-primary">Изменить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    const currentURL = window.location.href;
    console.log(currentURL);
    function openDetail(id) {
        window.open(currentURL + '/Detail/' + id, '_blank');
        console.log(currentURL + '/' + id);
    }
</script>